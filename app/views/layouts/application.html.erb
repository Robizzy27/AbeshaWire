<!DOCTYPE html>
<html>
<head>
  <title>AbehsaWeddings</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">AbeshaWire</a>
          </div>
          <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><%= link_to 'About', pages_about_url %></li>
              <li><%= link_to 'Venues', venues_url %></li>
              <li><%= link_to 'Contact Us', pages_contact_url %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li><%= link_to current_user.first_name, edit_user_registration_url %></li>
                <li><%= link_to 'Log Out', destroy_user_session_url, method: :delete %></li>
              <% else %>
                <li><%= link_to 'Sign In', new_user_session_url %></li>
              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </nav>

      <div class="container">
        <% if flash[:notice] %>
          <p class="notice alert alert-success" role="alert"><%= notice %></p>
        <% end %>
        <% if flash[:alert] %>
          <p class="alert alert alert-danger" role="alert"><%= alert %></p>
        <% end %>
        <%= yield %>

      </div>


</body>
</html>
